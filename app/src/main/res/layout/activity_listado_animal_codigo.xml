<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="domain.fincas.com.fincas.listado_animal_codigo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consulta de Animales Por Codigo"
                android:textColor="@android:color/background_dark"
                android:textSize="24dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editText6"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:hint="Codigo Animal"
                android:focusable="true"
                android:inputType="textPersonName" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/eliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="eliminar"
                    android:text="eliminar" />

                <Button
                    android:id="@+id/actualizar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="actualizar"
                    android:text="actualizar"
                    android:layout_weight="0.75" />

                <Button
                    android:id="@+id/consultar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="consultar"
                    android:text="consultar" />




            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/nombre1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nombre:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/nombre2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="textPersonName" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.05">


                <TextView
                    android:id="@+id/Genero1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Genero:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Genero2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Raza1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Raza:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/raza2"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Propietario1"
                    android:layout_width="150dp"
                    android:layout_height="66dp"
                    android:gravity="center"
                    android:text="Propietario:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/propietar"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Propietarioa1"
                    android:layout_width="150dp"
                    android:layout_height="66dp"
                    android:gravity="center"
                    android:text="Vendedor:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/vende"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Hierro1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Hierro:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/hierr"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Proposito1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Proposito:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/propo"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/cod_mama1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Código mama:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/Cod_MAMA2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="textPersonName" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/cod_papa1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Código papa:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/cod_papa2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="textPersonName" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/Peso1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Peso [Kg]:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/Peso2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="number|numberSigned|numberDecimal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/Peso_destete1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Peso Destete [Kg]:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/Peso_destete2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="number|numberSigned|numberDecimal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/Etapa_Produc1"
                    android:layout_width="150dp"
                    android:layout_height="73dp"
                    android:gravity="center"
                    android:text="Etapa de Producción:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/produ"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

            </LinearLayout>

            <Button
                android:id="@+id/button24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="atras"
                android:text="ATRAS" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
