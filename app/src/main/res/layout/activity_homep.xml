<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="domain.fincas.com.fincas.homep"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="24dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="209dp"
                android:layout_height="142dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/finca" />


            <Button
                android:id="@+id/button3"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="ingreso_info"
                android:text="REGISTRO" />

            <Button
                android:id="@+id/button4"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="consultas"
                android:text="CONSULTA" />


            <Button
                android:id="@+id/button20"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="backup"
                android:text="backup datos " />


            <Button
                android:id="@+id/config"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="configuracion"
                android:text="configuracion" />

            <Button
                android:id="@+id/button19"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="cerrar"
                android:text="Cerrar sesiÃ³n " />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
