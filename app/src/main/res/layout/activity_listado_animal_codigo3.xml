<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="domain.fincas.com.fincas.listado_animal_codigo3">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">


            </LinearLayout>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Resultado de busqueda:"
                android:textColor="@android:color/background_dark"
                android:textSize="24dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/nombre185"
                    android:layout_width="150dp"

                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Código:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:focusable="true"
                    android:gravity="center"
                    android:hint="Codigo Animal"
                    android:inputType="textPersonName" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/nombre1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nombre Animal:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/nombre2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="textPersonName" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.05">


                <TextView
                    android:id="@+id/Genero1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Genero:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Genero2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/Etapa_Produc1"
                    android:layout_width="150dp"
                    android:layout_height="73dp"
                    android:gravity="center"
                    android:text="Etapa de Producción:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/produ"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Raza1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Raza:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/raza2"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/propi1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Propietario:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/propi2"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Hierro1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Hierro:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/hierr"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Proposito1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Proposito:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/propo"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/Peso1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Peso Actual [Kg]:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/Peso2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="number|numberSigned|numberDecimal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/Peso_destete1"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="Peso Recibido [Kg]:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/Peso_destete2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="number|numberSigned|numberDecimal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fecha1"
                    android:layout_width="150dp"
                    android:layout_height="66dp"
                    android:gravity="center"
                    android:text=" Fecha de Recibido    [DD/MM/AAAA]:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="13dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilPlannedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etPlannedDate"
                        android:hint="Fecha de Recibido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:focusable="false"
                        android:textSize="14dp"
                        android:clickable="true"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/feha1"
                    android:layout_width="150dp"
                    android:layout_height="66dp"
                    android:gravity="center"
                    android:text=" Fecha de Nacimiento    [DD/MM/AAAA]:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="13dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilPlannedDate1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etPlannedDate1"
                        android:hint="Fecha de Nacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:focusable="false"
                        android:textSize="14dp"
                        android:clickable="true"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ffff"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Resumen de partos:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/par"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="consul"
                    android:text="consultar" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/eliminar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="eliminar"
                    android:text="eliminar" />

                <Button
                    android:id="@+id/actualizar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="actualizar"
                    android:text="actualizar" />
            </LinearLayout>

            <Button
                android:id="@+id/button24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="atras"
                android:text="ATRAS" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
